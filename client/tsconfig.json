{
  "include": ["src"],
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true
  }
}
