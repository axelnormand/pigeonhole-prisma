{
  "name": "@axelnormand/pigeonhole-server",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --no-notify --respawn --transpileOnly ./src",
    "clean": "rm -rf dist",
    "build": "cross-env NODE_ENV=production yarn clean && yarn generate && tsc",
    "start": "cross-env NODE_ENV=production node dist",
    "generate": "yarn generate:prisma && yarn generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/schema",
    "postinstall": "yarn generate"
  },
  "dependencies": {
    "@prisma/client": "^2.0.0-beta.1",
    "@types/crypto-js": "^3.1.44",
    "crypto-js": "^4.0.0",
    "dotenv": "^8.2.0",
    "graphql": "14.6.0",
    "graphql-shield": "7.2.2",
    "graphql-yoga": "1.18.3",
    "jsonwebtoken": "8.5.1",
    "nexus": "^0.12.0",
    "nexus-prisma": "^0.11.1",
    "nexus-prisma-generate": "^0.3.7"
  },
  "devDependencies": {
    "@prisma/cli": "^2.0.0-beta.1",
    "@types/bcryptjs": "2.4.2",
    "@types/jsonwebtoken": "8.3.8",
    "@types/node": "13.9.8",
    "@types/ws": "7.2.3",
    "cross-env": "^7.0.2",
    "ts-node": "8.8.1",
    "ts-node-dev": "1.0.0-pre.44"
  }
}
