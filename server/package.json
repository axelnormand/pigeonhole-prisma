{
  "name": "@axelnormand/pigeonhole-server",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "tsc": "tsc",
    "start": "ts-node-dev --no-notify --respawn --transpileOnly ./src",
    "build": "cross-env NODE_ENV=production yarn clean && yarn generate && tsc",
    "start:prod": "cross-env NODE_ENV=production yarn build && node dist",
    "start:netlify:dev": "cross-env PIGEONHOLE_SERVER=lambda yarn build && netlify dev -d public -f dist/functions",
    "generate": "yarn generate:prisma && yarn generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/schema",
    "postinstall": "yarn generate"
  },
  "dependencies": {
    "@nexus/schema": "^0.13.1",
    "@prisma/client": "^2.0.0-beta.2",
    "@types/crypto-js": "^3.1.44",
    "crypto-js": "^4.0.0",
    "dotenv": "^8.2.0",
    "graphql": "14.6.0",
    "graphql-shield": "7.2.4",
    "graphql-yoga": "1.18.3",
    "jsonwebtoken": "8.5.1",
    "nexus-prisma": "^0.12.0",
    "nexus-prisma-generate": "^0.3.7"
  },
  "devDependencies": {
    "@prisma/cli": "^2.0.0-beta.2",
    "@types/bcryptjs": "2.4.2",
    "@types/jsonwebtoken": "8.3.9",
    "@types/node": "13.11.1",
    "@types/ws": "7.2.4",
    "aws-lambda": "^1.0.5",
    "cross-env": "^7.0.2",
    "netlify": "^4.0.5",
    "ts-node": "8.8.2",
    "ts-node-dev": "1.0.0-pre.44"
  }
}
