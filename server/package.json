{
  "name": "@axelnormand/pigeonhole-server",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "tsc": "tsc",
    "test": "jest",
    "start": "ts-node-dev --no-notify --respawn --transpileOnly src",
    "build": "cross-env NODE_ENV=production yarn clean && yarn generate && tsc",
    "start:prod": "cross-env NODE_ENV=production yarn build && node dist",
    "start:netlify:dev": "cross-env PIGEONHOLE_SERVER=lambda yarn build && netlify dev -d public -f dist/functions",
    "generate": "yarn generate:prisma && yarn generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/schema",
    "postinstall": "yarn generate"
  },
  "dependencies": {
    "@nexus/schema": "^0.20.1",
    "@prisma/client": "^2.13.1",
    "@types/crypto-js": "^4.0.1",
    "crypto-js": "^4.0.0",
    "dotenv": "^8.2.0",
    "graphql": "15.4.0",
    "graphql-shield": "7.4.4",
    "graphql-yoga": "1.18.3",
    "jsonwebtoken": "8.5.1",
    "nexus-plugin-prisma": "^0.27.0",
    "nexus-prisma-generate": "^0.3.7"
  },
  "devDependencies": {
    "@prisma/cli": "^2.13.1",
    "@types/bcryptjs": "2.4.2",
    "@types/jsonwebtoken": "8.5.0",
    "@types/node": "14.14.17",
    "@types/ws": "7.4.0",
    "cross-env": "^7.0.3",
    "jest": "^26.6.3",
    "netlify": "^6.0.7",
    "ts-jest": "^26.4.4",
    "ts-node": "9.1.1",
    "ts-node-dev": "1.1.1"
  }
}
