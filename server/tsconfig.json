{
  "include": ["src"],
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    // for references
    "baseUrl": "src",
    // references required for monorepo to work
    //"references": [{ "path": "../server" }],
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "outDir": "dist"
  }
}
